<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="menu">
        <ul class="menu__list">
            <fest:each iterate="json.list" index="i" value="item">
                <li class="menu__item">
                    <a class="menu__link js-{item.name}" href="#{item.name}">
                        <fest:value>item.title</fest:value>
                    </a>
                </li>
            </fest:each>
        </ul>
    </div>

</fest:template>